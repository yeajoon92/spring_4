<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="noticeMapper">
  	
  	<select id="totalCount" parameterType="Pager">
  		select count(num) from notice where 
  		<choose>
  			<when test="kind == 'contents'">
  				contents
  			</when>
  			<when test="kind == 'writer'">
  				writer
  			</when>
  			<otherwise>
  				title
  			</otherwise>
  		</choose>
  		like '%'||#{search}||'%'
  	</select>
  	
  	<select id="selectList" resultType="com.cyj.board.notice.NoticeDTO" parameterType="java.util.Map">
  		
  		select * from 
  		(select rownum R, N.* from 
  		(select * from notice where 
  		<choose>
  			<when test="kind == 'contents'">
  				contents
  			</when>
  			<when test="kind == 'writer'">
  				writer
  			</when>
  			<otherwise>
  				title
  			</otherwise>
  		</choose>
  		like '%'||#{search}||'%' order by num desc) N) 
  		where R between #{startRow} and #{lastRow}
  	</select>
  	
  	<select id="selectOne" resultType="com.cyj.board.BoardDTO" parameterType="java.lang.Integer">
  		select * from notice where num = #{num}
  	</select>
  	
  	<insert id="ins" parameterType="com.cyj.board.notice.NoticeDTO">
  		insert into notice values (notice_seq.nextval, #{title}, #{writer}, #{contents}, sysdate, 0)
  	</insert>
  	
  	<delete id="del" parameterType="java.lang.Integer">
  		delete notice where num = #{num}
  	</delete>
  </mapper>